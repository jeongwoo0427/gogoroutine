        android:layout_width="42dp"
        android:layout_height="42dp"
        android:textOff="화"
        android:textOn="화"
        style="@style/toggleButton"
        android:background="@drawable/selector_toggle_bg" />

    <ToggleButton
        android:id="@+id/t4"
