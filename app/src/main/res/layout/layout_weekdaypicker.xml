        android:layout_height="42dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textOff="일"
        android:textOn="일"
        style="@style/toggleButton"
        android:background="@drawable/selector_toggle_bg" />
