<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    >





        <TextView
            android:id="@+id/show_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="푸쉬업 100회"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorDarkBlue"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/show_tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_tv_name"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="한개만 더! 할 수 있잖아!"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20dp"/>



    <ProgressBar
        android:id="@+id/show_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_circle_light_gray"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_dark_blue"
        android:rotation="-90" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/show_tv_emoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text=":)"
            android:textAlignment="center"
            android:textColor="@color/colorDarkBlue"
            android:textSize="40sp" />

    <TextView
        android:id="@+id/show_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:01:00"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/show_tv_centerbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/show_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_play_circle_filled_24" />



</RelativeLayout>

