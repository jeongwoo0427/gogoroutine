<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialogbackground"

    >

    <TextView
        android:id="@+id/fragmentdialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morning Routine"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"

        />

    <View
        android:id="@+id/fragmentdialog_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/fragmentdialog_tv_title"
        android:background="@color/colorLightGray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentdialog_divider1"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

    <Button
        android:id="@+id/routinedialog_btn_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="수정"
        android:textSize="18dp"
        android:textAlignment="center"
        android:stateListAnimator="@null"
        />

        <Button
            android:id="@+id/routinedialog_btn_dup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="복제"
            android:textSize="18dp"
            android:textAlignment="center"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            />
        <Button
            android:id="@+id/routinedialog_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="삭제"
            android:textSize="18dp"
            android:textAlignment="center"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            />

    </LinearLayout>


</RelativeLayout>