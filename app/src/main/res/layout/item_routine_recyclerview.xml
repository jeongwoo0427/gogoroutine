<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/item_recycler_card"
    android:layout_margin="15dp"
    android:elevation="7dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_routine_rl1"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_tv_name"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="아침루틴"/>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_below="@id/item_routine_rl1"
        android:background="@color/colorLightGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/item_routine_rl1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_tv_starttime"
        android:textSize="18dp"
        android:padding="10dp"
        android:textColor="@color/colorTextGray"
        android:layout_centerInParent="true"
        android:text="AM 04:20 ~ AM 05:40"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:background="@drawable/ic_baseline_more_horiz_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"

            />

    </RelativeLayout>
</RelativeLayout>
