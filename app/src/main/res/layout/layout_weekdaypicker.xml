        android:textOn="목"
        style="@style/toggleButton"
        android:background="@drawable/selector_toggle_bg" />

    <ToggleButton
        android:id="@+id/t6"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:textOff="금"
        android:textOn="금"
        style="@style/toggleButton"
        android:background="@drawable/selector_toggle_bg" />

    <ToggleButton
        android:id="@+id/t7"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:textOff="토"
        android:textOn="토"
        style="@style/toggleButton"
        android:background="@drawable/selector_toggle_bg" />
