<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gogoroutine">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_gogoroutine"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gogoroutine_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">
        <activity android:name=".activity_main.ActivityTutorial"></activity>
        <activity android:name=".activity_main.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_routineshow.ActivityComplete" />

        <service android:name=".services.UndeadService" />

        <receiver android:name=".services.AlarmReceiver" />

        <activity
            android:name=".activity_taskmanager.ActivityTaskManager"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_routineshow.ActivityRoutineShow"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_routinemanager.ActivityRoutineManager"
            android:screenOrientation="portrait" /> <!-- android:excludeFromRecents="true" -->
        <activity
            android:name=".activity_main.ActivityChoose"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_main.ActivityMain"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>